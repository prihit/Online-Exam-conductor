<section id="main-content">
	<section class="wrapper" style="margin-left: 70px;">
	<div class="form-w3layouts">
        <!-- page start-->
        <!-- page start-->
        <div class="row">
            <div class="col-lg-12" style="padding-left: 20px;">
                    <section class="panel">
                        <header class="panel-heading">
                            Enter Exam Details
                        </header>
                        <div class="panel-body">
                            <div class="position-center">
                                <form action="/createexam/exfo/<%= results[0][0].id %>/<%= results[0][0].nofque %>" method="post" role="form">
<% for(i=1;i<= results[0][0].nofque; i++) { %>
                                <div class="form-group">
                                  <label for="questype">Choose a Question Type:</label>
                                  <select id="questype" name="questype">
                                    <option value="fitb">Fill In The Blanks</option>
                                    <option value="ocq">Choose the Correct option</option>
                                    <option value="mcq">Multiple Choice Question</option>
                                    <option value="sub">Subjective</option>
                                  </select>
                                    </div>
                                <div class="form-group">
                                  <label for="ques<%= i %>">Enter Question</label>
<input type="text" name="ques<%= i %>" id="ques<%= i %>" placeholder="Enter Question.">
                                </div>
                                <div class="form-group">
                                  <label for="ques<%= i %>mm">marks</label>
                                  <input type="number" name="ques<%= i %>mm" id="ques<%= i %>mm" placeholder="marks" min="0">
                                </div>
                                <div class="form-group">
                                  <p>Give Options only if required else leave blank</p>
                                </div>
                                <div class="form-group">
                                  <label for="ques<%= i %>op1">Option 1</label>
<input type="text" name="ques<%= i %>op1" id="ques<%= i %>op1" placeholder="If Question type is MCQ then fill the options else leave them blank">
                                </div>
                                <div class="form-group">
                                  <label for="ques<%= i %>op2">Option 2</label>
<input type="text" name="ques<%= i %>op2" id="ques<%= i %>op2" placeholder="If Question type is MCQ then fill the options else leave them blank">
                                </div>
                                <div class="form-group">
                                  <label for="ques<%= i %>op3">Option 3</label>
<input type="text" name="ques<%= i %>op3" id="ques<%= i %>op3" placeholder="If Question type is MCQ then fill the options else leave them blank">                                  
                                </div>
                                <div class="form-group">
<label for="ques<%= i %>op4">Option 4</label>                                  
<input type="text" name="ques<%= i %>op4" id="ques<%= i %>op4" placeholder="If Question type is MCQ then fill the options else leave them blank">
</div><br><br><br>
<% } %>

                                <button type="submit" class="btn btn-info">Submit</button>
                            </form>
                            </div>

                        </div>
                    </section>

            </div>

